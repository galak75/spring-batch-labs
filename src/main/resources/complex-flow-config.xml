    <job id="myJob">
        <step id="step1">
            <tasklet ref="tasklet1"/>
            <fail on="CUSTOM_EXIT_STATUS"/>
            <next on="*" to="step2"/>
        </step>

        <step id="step2">
            <tasklet ref="tasklet2"/>
            <end on="1ST_EXIT_STATUS"/>
            <next on="2ND_EXIT_STATUS" to="step10"/>
            <next on="*" to="step20"/>
        </step>

        <step id="step10" next="step11">
            <tasklet ref="defaultTasklet"/>
        </step>
        <step id="step11">
            <tasklet ref="defaultTasklet" />
        </step>

        <step id="step20" next="step21">
            <tasklet ref="defaultTasklet" />
        </step>
        <step id="step21" next="step22">
            <tasklet ref="defaultTasklet" />
        </step>
        <step id="step22">
            <tasklet ref="defaultTasklet" />
        </step>
    </job>

    <beans:bean id="defaultTasklet" class="org.galak75.MyTasklet" scope="prototype">
        <beans:property name="exitCodeProperty" value="DEFAULT"/>
    </beans:bean>

    <beans:bean id="tasklet1" class="org.galak75.MyTasklet">
        <beans:property name="exitCodeProperty" value="STEP1"/>
    </beans:bean>

    <beans:bean id="tasklet2" class="org.galak75.MyTasklet">
        <beans:property name="exitCodeProperty" value="STEP2"/>
    </beans:bean>


</beans:beans>